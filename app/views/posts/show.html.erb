<%= link_to '< ' + @exhibit.name, exhibit_path(@exhibit), :class => "left"  %>

<div class="nav-links">
<%= link_to 'Pin it', "http://pinterest.com/pin/create/button/?url=" + request.original_url + "&amp;description=Check+out+the+hear+me+exhibit..." %> 

<%= link_to 'Tweet it', "http://twitter.com/share?url=" + request.original_url + "&amp;text=Check+out+Hear+Me:+Your+story+through+tattoos...&amp;hashtags=#hearme" %> 
<%= link_to 'Share on FB', "http://www.facebook.com/share.php?u=" + request.original_url %>
</div>

<div class="center homelogo">
	<%= link_to (image_tag @exhibit.image.url(:medium)), exhibit_posts_path(@exhibit) %>
</div>

<h1><%= @post.title %></h1>
<p><%= @post.description %></p>	


<div class="col-md-8">

	<ul class="bxslider">
		<% @postimages.each do |image| %>
			<li><%= image_tag image.photo.url(:medium) %></li>
		<% end %>
	</ul>

</div>
<div>
	<div id="bx-pager">
		<% @postimages.each_with_index do |image, index| %>
	 		<a data-slide-index="<%= index %>" href=""><%= image_tag image.photo.url(:thumb) %></a>
	 	<% end %>
</div>

<div class="clear header">
<h3>About Us</h3>
<%= image_tag @organization.image.url(:medium), :class => "left"  %>
<label><%= @organization.name %></label>
<p><%= @organization.description %></p>
</div>

<div class="clear header">
<% if user_signed_in? %>

	<p id="notice"><%= notice %></p>
	<%= link_to 'Edit', edit_post_path(@post) %> | 
	<%= link_to 'Destroy', @post, method: :delete, data: { confirm: 'Are you sure?' } %>

<% end %>
</div>