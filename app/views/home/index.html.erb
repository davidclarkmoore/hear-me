<h1>Hear Me !!</h1>


<div class="tilegrid">

	<% @homeposts.each do |post| %>
		<div class="tile">
		<h3 ><%= link_to post.title, post_path(post), :class => "truncate" %></h3>
			<% post.images.limit(1).each do |image| %>
				<%= image_tag image.photo.url(:medium), :class => "clear" %>
			<% end %>
		</div>
	<% end %>

</div>
