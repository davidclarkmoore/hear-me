<%= simple_form_for(@organization) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">

	<%= f.input :name, label: 'Name:', error: 'Whoops! We need a name here :)' %>
	<%= f.input :description, label: 'Description:', error: 'Whoops! We need a description here :)' %>
	<%= f.file_field :image, label: 'Image:', error: 'Whoops! We need an image here :)' %>

  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
