<%= simple_form_for(@organization) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">

	<%= f.input :name, label: 'Name:', error: 'Whoops! We need a name here :)', wrapper_html: { class: 'form-group' }, input_html: { class: 'form-control' }  %>
	<%= f.input :description, label: 'Description:', error: 'Whoops! We need a description here :)', wrapper_html: { class: 'form-group' }, input_html: { class: 'form-control' }  %>
	 <label for="exampleInputFile">Organization Logo Upload:</label>
	<%= f.file_field :image, label: 'Image:', error: 'Whoops! We need an image here :)', :class => "trailer" %>

  </div>

  <div class="form-actions">
    <%= f.button :submit, :class => "btn-success" %>
  </div>
<% end %>
